






<section class="containeradmin view-product">
   <a href="admin/add-products" class="btn-primary pl-5">Add products</a> 





       <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th>images</th>
    </tr>
  </thead>
  <tbody>

      {{#each products}}
    <tr>
         
      <td scope="row">1</th>
     
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td><img src="/product-images/{{this._id}}.png" style="width: 150px; height:100px" alt=""></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
    
</section>